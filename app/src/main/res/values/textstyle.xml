<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.AppCompat.H6">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/textSize_20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.AppCompat.CoinDescription">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/textSize_16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.AppCompat.CoinItemPrimaryField">
        <item name="fontFamily">@font/plus_jakarta_sans</item>
        <item name="android:textSize">@dimen/textSize_16sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="TextAppearance.AppCompat.CoinItemSecondaryField">
        <item name="fontFamily">@font/plus_jakarta_sans</item>
        <item name="android:textSize">@dimen/textSize_14sp</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextAppearance.AppCompat.ErrorToast">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/textSize_14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>